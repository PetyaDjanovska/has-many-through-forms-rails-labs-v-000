<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>
<ul>Categories:
  <% @post.categories.each do |cat| %>
    <li><%= cat.name %></li>
  <% end %>
</ul>

<!-- Comment form -->

  <%= form_for :comment do |f| %>
    <%= f.label "Write your comment here" %>
    <%= f.text_field :content %>
    <%= f.collection_select :user_id, User.all, :id, :username %>
    <%= f.submit "Create Comment"%>
  <% end %>
